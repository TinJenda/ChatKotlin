<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="@dimen/space10"
    android:layout_marginLeft="@dimen/spaceLR">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_alignParentRight="true">
        <TextView
            android:id="@+id/tv_time_me"
            android:layout_marginRight="@dimen/space10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/space5"
            android:drawableRight="@drawable/ic_clock"
            android:text="5:04pm"
            android:textColor="@color/colorDefaultText"
            android:textSize="@dimen/h4"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:background="@drawable/background_with_rounded_corners"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/image_chat_me"
                    android:layout_width="180dp"
                    android:layout_height="250dp"
                    android:adjustViewBounds="true"
                    android:layout_gravity="right"
                    android:scaleType="centerCrop"/>
            </LinearLayout>
    </LinearLayout>
</RelativeLayout>