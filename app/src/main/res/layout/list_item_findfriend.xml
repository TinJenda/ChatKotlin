<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="75dp"
    android:background="@drawable/bg_item_list">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_user_photo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/space10"
        android:layout_marginRight="@dimen/space10"
        android:src="@drawable/avarta"/>
    <LinearLayout
        android:id="@+id/ln_contact"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:paddingRight="@dimen/space10"
        android:layout_toRightOf="@+id/iv_user_photo"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textSize="18dp"
            android:text="Tin Truong"
            android:textColor="@color/colorBlack"
            android:layout_gravity="center_vertical"/>
        <Button
            android:id="@+id/id_sendrequest_add_friend"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="50dp"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="Kết bạn"
            android:textColor="@color/colorWhile"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="5dp"
            android:background="@drawable/custom_button_doithongtin"/>
        <Button
            android:id="@+id/idDongY"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="30dp"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="Đồng ý"
            android:textColor="@color/colorWhile"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="5dp"
            android:background="@drawable/custom_button_doithongtin"/>
        <Button
            android:id="@+id/idKhongDongY"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="10dp"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="Từ chối"
            android:textColor="@color/colorWhile"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="5dp"
            android:background="@drawable/custom_button_doithongtin"/>
        <Button
            android:id="@+id/idhuyYeuCau"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="50dp"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="Hủy yêu cầu"
            android:textColor="@color/colorWhile"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="5dp"
            android:background="@drawable/custom_button_doithongtin"/>
    </LinearLayout>
    <View
        android:layout_below="@+id/ln_contact"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="60dp"
        android:background="@color/colorDefaultBackground"/>
</RelativeLayout>